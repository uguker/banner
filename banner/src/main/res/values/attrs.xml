<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Banner">
        <!-- 延时时间 -->
        <attr name="delayTime" format="integer" />
        <!-- 滚动时间 -->
        <attr name="scrollTime" format="integer" />
        <!-- 是否自动播放 -->
        <attr name="automatic" format="boolean" />
        <!-- 是否可以滑动 -->
        <attr name="scrollable" format="boolean" />

        <!-- 标题部分  -->

        <!-- 标题背景 -->
        <attr name="titleBackground" format="reference" />
        <!-- 标题高度 -->
        <attr name="titleHeight" format="dimension" />
        <!-- 标题内部间隔 -->
        <attr name="titlePadding" format="dimension" />
        <!-- 标题内部左间隔 -->
        <attr name="titlePaddingLeft" format="dimension" />
        <!-- 标题内部右间隔 -->
        <attr name="titlePaddingRight" format="dimension" />
        <!-- 标题文字颜色 -->
        <attr name="titleTextColor" format="color" />
        <!-- 标题文字大小 -->
        <attr name="titleTextSize" format="dimension" />

        <!-- 数字指示器宽度 -->
        <attr name="numberWidth" format="dimension" />
        <!-- 数字指示器高度 -->
        <attr name="numberHeight" format="dimension" />
        <!-- 数字指示器间隔 -->
        <attr name="numberMargin" format="dimension" />
        <!-- 数字指示器文字颜色 -->
        <attr name="numberTextColor" format="color" />
        <!-- 数字指示器文字大小 -->
        <attr name="numberTextSize" format="dimension" />
        <!-- 数字指示器背景 -->
        <attr name="numberBackground" format="reference" />

        <!-- 指示器选项 -->

        <!-- 单个指示器宽度 -->
        <attr name="indicatorWidth" format="dimension" />
        <!-- 单个指示器高度 -->
        <attr name="indicatorHeight" format="dimension" />
        <!-- 指示器外部间隔 -->
        <attr name="indicatorMargin" format="dimension" />
        <!-- 指示器内部间隔 -->
        <attr name="indicatorPadding" format="dimension" />
        <!-- 选择时的指示器的颜色和图形（如果设置了图形，设置形状无效） -->
        <attr name="indicator_selected" format="reference|color" />
        <!-- 未选择时的指示器的颜色和图形（如果设置了图形，设置形状无效） -->
        <attr name="indicator_unselected" format="reference|color" />
        <attr name="indicatorSelectedColor" format="color"/>
        <attr name="indicatorUnselectedColor" format="color"/>

        <attr name="bannerType" format="enum">
            <!-- 没有任何提示 -->
            <enum name="none" value="0"/>
            <!-- 只有外部图形指示器居中 -->
            <enum name="indicatorCenter" value="1"/>
            <!-- 只有外部图形指示器居左 -->
            <enum name="indicatorLeft" value="2"/>
            <!-- 只有外部图形指示器居右 -->
            <enum name="indicatorRight" value="3"/>
            <!-- 只有外部数字指示器 -->
            <enum name="numIndicator" value="4"/>
            <!-- 只有标题栏 -->
            <enum name="title" value="5"/>
            <!-- 标题栏及外部数字指示器 -->
            <enum name="titleNumIndicator" value="6"/>
            <!-- 标题栏及图形数字指示器居中 -->
            <enum name="titleIndicatorCenter" value="7"/>
            <!-- 标题栏及图形数字指示器居左 -->
            <enum name="titleIndicatorLeft" value="8"/>
            <!-- 标题栏及图形数字指示器居右 -->
            <enum name="titleIndicatorRight" value="9"/>
            <!-- 标题栏及内部图形数字指示器 -->
            <enum name="titleInIndicator" value="10"/>
        </attr>

    </declare-styleable>
</resources>
